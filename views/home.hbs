<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=initial-scale=1.0" />
    {{! css link }}
    <link rel="stylesheet" href="../../css/style.css" />
    {{! favicon link... logo link }}
    <link
      rel="shortcut icon"
      href="/Flag_of_Kenya.svg.png"
      type="image/x-icon"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!--inter font from google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    {{! google libraries scripts }}
    <script
      type="text/javascript"
      src="https://www.gstatic.com/charts/loader.js"
    ></script>
    <title>Race Tracker </title>
  </head>
  <body onload="fetchRaces()">
    <header class="header">
      <nav>
        <p>{{name}} Races</p>
      </nav>
    </header>
    <main id="main-content">
      <div id="container">
        <div id="graph-container">
          <div id="curve_chart">
        </div>
                  <!-- Button trigger modal -->
          <button
            type="button"
            id="modal"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#Modal1"
          >
            Enter race details
          </button>

          <!-- Main Modal -->
          <div
            class="modal fade"
            id="Modal1"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                {{! modal header }}
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Race entries:
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form class="modal-body">
                  {{! Event }}
                  <div class="mb-3">
                    <label
                      for="event-name"
                      class="col-form-label"
                    >Event:</label>
                    <input type="text" class="form-control" id="event-name" />
                  </div>
                  {{! Date of Event }}
                  <div class="mb-3">
                    <label for="event-time" class="col-form-label">Date:</label>
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="event-time"
                    />
                  </div>
                  {{! Laptime }}
                  <div class="mb-3">
                    <label for="laptime" class="col-form-label">Laptime
                      (seconds):</label>
                    <input type="number" step="any" class="form-control" id="laptime" />

                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >Close</button>
                    <button
                      type="submit"
                      class="btn btn-primary"
                      onclick="alertSave()"
                    >Save changes</button>
                  </div>
                </form>
              </div>
            </div>

          </div>
        </div>
        {{! race view container }}
        <div id="race-view">

          <!-- Edit Button Modal -->
          <div
            class="modal fade"
            id="Modal2"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                {{! modal header }}
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">edit entries:
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <form class="modal-body">
                  {{! Event }}
                  <div class="mb-3">
                    <label
                      for="event-name"
                      class="col-form-label"
                    >Event:</label>
                    <input type="text" class="form-control" id="event-name" />
                  </div>
                  {{! Date of Event }}
                  <div class="mb-3">
                    <label for="event-time" class="col-form-label">Date:</label>
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="event-time"
                    />
                  </div>
                  {{! Laptime }}
                  <div class="mb-3">
                    <label for="laptime" class="col-form-label">Laptime
                      (seconds):</label>
                    <input type="number" class="form-control" id="laptime" />

                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary"
                      data-bs-dismiss="modal"
                    >Close</button>
                    <button
                      type="submit"
                      class="btn btn-primary"
                      onclick="alertSave()"
                    >Save changes</button>
                  </div>
                </form>
              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="table-container">
        <table id="content">
        </table>
      </div>
    </main>
    <footer>
      <p class="copyright">
        &copy; 2022 Omnayala Track
      </p>
    </footer>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
  ></script>
  <script src="js/main.js"></script>

</html>